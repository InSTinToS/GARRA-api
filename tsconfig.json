{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2018",
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "commonjs",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@docs/*": ["./src/docs/*"],
      "@types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"],
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"]
    }
  }
}
